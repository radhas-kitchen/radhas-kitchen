{
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"target": "ESNext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@components/*": [
				"./src/components/*"
			],
			"@cn": [
				"./src/utils/cn"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@proto/*": [
				"./src/protogen/*"
			],
			"@/*": [
				"./src/*"
			],
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"eslint.config.mjs",
		"tailwind.config.js",
		"./types/**/*.d.ts",
	],
	"exclude": [
		"node_modules",
		"src-tauri"
	]
}