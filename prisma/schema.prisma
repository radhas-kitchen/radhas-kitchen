generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Token {
    id      String   @id @default(cuid())
    token   String   @default(cuid())
    created DateTime @default(now())
    expires DateTime
    user    User     @relation(fields: [user_id], references: [id])
    user_id String
}

model User {
    id       String  @id @default(cuid())
    email    String  @unique
    passhash String
    salt     String  @default(cuid())
    tokens   Token[]
}
